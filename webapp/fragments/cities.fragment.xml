<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
<VBox>
    <items>
        <HBox>
            <Select items="{/cities}">
                <core:Item
                    key="{name}"
                    text="{name}"
                />
            </Select>
        </HBox>
        <HBox>
            <ComboBox items="{/cities}">
                <core:Item
                    key="{name}"
                    text="{name}"
                />
            </ComboBox>
        </HBox>
        <MultiComboBox
            items="{/cities}"
            width="50%"
        >
            <core:Item
                key="{name}"
                text="{name}"
            />
        </MultiComboBox>
    </items>
</VBox>
</core:FragmentDefinition>